@model IEnumerable<MVC_Hotel.Models.EntradaSaidaModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Entrada", "Entrada")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_quarto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.data_entrada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.data_saida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valor_pago)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id_quarto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.id_cliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.data_entrada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.data_saida)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.valor_pago)
        </td>
        <td>
            @Html.ActionLink("Saida", "Saida", new { id=item.id })
        </td>
    </tr>
}

</table>
